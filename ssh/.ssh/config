# Config file so that `ssh pi` goes straight to Raspberry Pi
# UPDATED: August 25, 2025
# Now using Tailscale IP addresses instead of local IP

Host pi5
    # HostName 192.168.1.10
    HostName 100.125.173.109
    User kyle
    IdentityFile ~/.ssh/id_ed25519

Host pi4
    # HostName 192.168.1.13
    HostName 100.108.174.90
    User kyle
    IdentityFile ~/.ssh/id_ed25519
