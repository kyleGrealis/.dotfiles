#!/usr/bin/env bash

#=================================================================
# tailscale-home
# Purpose: Disables Tailscale exit node for home networks
# Author: Kyle Grealis
# Date: October 10, 2025
#=================================================================

echo "üè† Switching to home mode..."
sudo tailscale up --exit-node=""

# Verification logic
STATUS=$(tailscale status)
if echo "$STATUS" | grep -q "offers exit node"; then
  echo "‚úÖ Exit node protection disabled! Traffic now routes normally."
else
  echo "‚ùå Something went wrong. Please check tailscale status."
fi
